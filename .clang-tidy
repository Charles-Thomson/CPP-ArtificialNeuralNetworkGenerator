---
Checks: >
  clang-analyzer-*,
  cppcoreguidelines-*,
  modernize-*,
  readability-*,
  performance-*,
  google-*
WarningsAsErrors: ''
HeaderFilterRegex: '.*'
AnalyzeTemporaryDtors: false
FormatStyle:     google
CheckOptions:
  - key:             modernize-use-auto.MinTypeNameLength
    value:           0
  - key:             readability-braces-around-statements.ShortStatementLines
    value:           1
  - key:             readability-identifier-naming.VariableCase
    value:           camelBack
  - key:             readability-identifier-naming.FunctionCase
    value:           CamelCase
  - key:             cppcoreguidelines-pro-type-vararg.AllowPrintfFormat
    value:           true